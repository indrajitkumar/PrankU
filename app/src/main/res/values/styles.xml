<resources>

    <style name="MyTheme" parent="Base.MyTheme"></style>

    <style name="Base.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryDark">@color/primary_700</item>
        <item name="colorAccent">@color/accent_500</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/primary_light</item>
    </style>

    <style name="AppTheme.Translucent" parent="Base.MyTheme">
        <item name="colorPrimary">@color/app_primary_dark</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/app_primary_accent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="tvTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/uikit_baseColor</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginTop">@dimen/shopping_cart_image_margin_top</item>
    </style>

    <style name="tvHeaderTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/uikit_baseColor</item>
        <item name="android:textSize">@dimen/header</item>
        <item name="fontPath">fonts/centralesansbold.ttf</item>
        <item name="android:layout_marginLeft">@dimen/shipping_address_margin_left</item>
        <item name="android:layout_marginTop">@dimen/shipping_address_margin_top_bottom</item>
    </style>

    <style name="tvBoldTitle">
        <item name="fontPath">fonts/centralesansbold.ttf</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/uikit_baseColor</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="networkImage">
        <item name="android:layout_width">@dimen/network_image_width</item>
        <item name="android:layout_height">@dimen/network_image_height</item>
        <item name="android:layout_marginBottom">@dimen/network_margin_top_bottom</item>
        <item name="android:layout_marginLeft">@dimen/network_margin_left_right</item>
        <item name="android:layout_marginTop">@dimen/shopping_cart_image_margin_top</item>
        <item name="android:layout_marginRight">@dimen/shopping_cart_image_right</item>
        <item name="android:paddingLeft">@dimen/shopping_cart_image_margin_top</item>
        <item name="android:src">@drawable/no_icon</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="centralesansBoldFont">
        <item name="fontPath">fonts/centralesansbold.ttf</item>
    </style>

    <style name="centralesansLightFont">
        <item name="fontPath">fonts/centralesanslight.ttf</item>
    </style>

    <style name="centralesansBookFont">
        <item name="fontPath">fonts/centralesansbook.ttf</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:enabled">false</item>
        <item name="android:layout_height">@dimen/shipping_address_continue_button_height</item>
        <item name="android:layout_marginBottom">
            @dimen/shipping_address_continue_margin_bottom
        </item>
        <item name="android:layout_marginLeft">
            @dimen/shipping_address_cancel_button_margin_left_right
        </item>
        <item name="android:layout_marginRight">
            @dimen/shipping_address_cancel_button_margin_left_right
        </item>
        <item name="android:layout_marginTop">
            @dimen/shipping_address_continue_margin_top
        </item>
    </style>

    <dimen name="header">20sp</dimen>
    <dimen name="title">16sp</dimen>
    <dimen name="network_margin_top_bottom">5dp</dimen>
    <dimen name="network_margin_left_right">12dp</dimen>
</resources>