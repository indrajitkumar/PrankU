<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_catalog_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/border16_margin_left_right">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image"
        android:layout_width="@dimen/network_image_width"
        android:layout_height="@dimen/network_image_height"
        android:layout_marginRight="@dimen/border12_margin"
        android:src="@drawable/no_icon" />

    <LinearLayout
        android:id="@+id/price_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/border12_margin"
        android:layout_marginTop="@dimen/image_margin_top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_discounted_price"
            style="@style/centralesansBookFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_700"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/centralesansBookFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_700"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_product_name"
        style="@style/centralesansBookFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/border4_margin"
        android:layout_marginRight="@dimen/border16_margin_left_right"
        android:layout_toRightOf="@id/image"
        android:lineSpacingExtra="@dimen/border4_margin"
        android:text="DiamondClean"
        android:textColor="@color/primary_700"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_ctn"
        style="@style/centralesansBookFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_product_name"
        android:layout_marginBottom="@dimen/border4_margin"
        android:layout_toRightOf="@id/image"
        android:text="HX8332/11"
        android:textColor="@color/primary_700"
        android:textSize="12sp" />

    <com.shamanland.fonticon.FontIconTextView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@color/app_primary_dark"
        android:textSize="16sp" />

</RelativeLayout>